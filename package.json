{
  "name": "libresplit-converter",
  "version": "0.1.0",
  "homepage": "https://converter.libresplit.org",
  "private": true,
  "scripts": {
    "format": "npm run format:js && npm run format:rust",
    "format:js": "prettier . --write",
    "format:rust": "cargo fmt --manifest-path wasm-lib/Cargo.toml --all",
    "dev": "vite",
    "build": "npm run build:wasm && npm run build:js",
    "build:wasm": "cd wasm-lib && wasm-pack build --target web --out-dir pkg",
    "build:js": "tsc && vite build"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "wasm-lib": "file:wasm-lib/pkg"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "@eslint/js": "^9.36.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.16",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "wasm-lib": "file:wasm-lib/pkg",
    "wasm-pack": "^0.13.1"
  }
}
